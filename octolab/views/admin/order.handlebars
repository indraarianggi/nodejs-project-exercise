<div class="row">
    <div class="col s12 m12">
        <div class="row">
            <div class="col s4 4">
                <strong>Order: </strong>
            </div>
            <div class="col s4 m4 offset-s4 offset-m4 right">

                <!-- Dropdown Trigger -->
                <a class='dropdown-trigger btn btn-default' href='#' data-activates='dropdown1'>
                    Search Order <i class="fas fa-caret-down"></i>
                </a>

                <!-- Dropdown Structure -->
                <ul id='dropdown1' class='dropdown-content'>
                    <li><a href="/admin/order/">All</a></li>
                    <li><a href="/admin/order/0">New</a></li>
                    <li><a href="/admin/order/5">Finished</a></li>
                </ul>

            </div>
        </div>

        <div class="row">
            <div class="col s12 m12">
                {{#if orders}}
                    <table class="bordered striped">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Date</th>
                                <th>Price</th>
                                <th>User</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each orders}}
                                <tr>
                                    <td>
                                        {{orderCode}}
                                    </td>
                                    <td>
                                        {{formatDate date 'MMMM Do YYYY'}}
                                    </td>
                                    <td>
                                        {{#if price}}
                                            {{price}}
                                        {{else}}
                                            <span class="tooltipped" data-position="bottom" data-tooltip="Lakukan konfirmasi harga untuk user">Belum tersedia <i class="fas fa-info-circle"></i></span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        {{user.name}}
                                    </td>
                                    <td>
                                        <span class="tooltipped" data-position="bottom" data-tooltip="{{orderStatus status}}">{{status}} <i class="fas fa-info-circle"></i></span>
                                    </td>
                                    <td>
                                        {{#if price}}
                                            <a href="#" class="btn">
                                                Edit Progress
                                            </a>
                                        {{else}}
                                            <a href="#" class="btn red">
                                                Confirm Price
                                            </a>
                                        {{/if}}

                                        <a href="/order/detail/{{id}}" class="btn">
                                            Detail
                                        </a>
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                {{else}}
                    <p class="center">There are no order yet</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>
