<div class="row">
    <div class="col s12 m8 offset-m2">
        <div class="card">
            <div class="card-content">
                <div class="card-title center">
                    Confirm Payment
                </div>

                <form action="/order/confirm" enctype="multipart/form-data" method="post">
                    <div class="row">
                        <div class="input-field">
                            <input type="text" name="orderCode" required>
                            <label for="orderCode">Order code</label>
                        </div>
                    </div>
                    <div class="row">
                        <h5>Transfer Details</h5>
                        <hr>
                        <div class="input-field">
                            <input type="text" name="amount" required>
                            <label for="amount">The amount of money you transferred</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12 m4">
                            <div class="input-field">
                                <input type="text" name="bank" required>
                                <label for="bank">Bank</label>
                            </div>
                        </div>
                        <div class="col s12 m8">
                            <div class="input-field">
                                <input type="text" name="bankAccount" required>
                                <label for="bankAccount">Bank account owner</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12 m12 fileUpload btn btn-form grey">
                            <span>Upload proof of payment</span>
                            <input id="upload-proof-payment" type="file" name="image" class="upload" required/>
                        </div>
                    </div>
                    <span id="image-proof"></span>
                    <div class="row">
                        <h5>Shipping Details</h5>
                        <hr>
                        <div class="input-field">
                            <input type="text" name="invoice1" required>
                            <label for="invoice1">Invoice</label>
                        </div>
                    </div>
                    <div class="row">
                        <input type="submit" value="Confirm" class="btn btn-form yellow accent-4">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
