<div class="row">
    <div class="col s12 m12">
        <div class="card">
            <div class="card-content">
                <div class="card-title center">
                    Make New Order
                </div>

                {{> _message}}
                
                <form action="/order/add" method="post">
                    <table id="order-details" class="bordered">
                        <thead>
                            <tr>
                                <th>Film</th>
                                <th>Quantity</th>
                                <th>Instruction</th>
                                <th>Note</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="order-detail-field">
                            <tr id="field1">
                                <td>
                                    <div class="input-field">
                                        <input type="text" name="detailFilm" required>
                                    </div>
                                </td>
                                <td>
                                    <div class="input-field">
                                        <input type="number" min="0" name="detailQuantity" required>
                                    </div>
                                </td>
                                <td>
                                    <div class="input-field">
                                        <input type="text" name="detailInstruction" required>
                                    </div>
                                </td>
                                <td>
                                    <div class="input-field">
                                        <input type="text" name="detailNote">
                                    </div>
                                </td>
                                <td>
                                    <div class="input-field">
                                        <button class="add-field btn"><i class="fas fa-plus"></i></button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="row">
                        <div class="col s12 m12">
                            <p>
                                <input type="checkbox" name="sendBack" class="filled-in" id="send-back">
                                <label for="send-back">Send the negative film back to me</label>
                            </p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col s12 m12">
                            <p>
                                <input type="checkbox" name="allowPost" class="filled-in" id="allow-post">
                                <label for="allow-post">Allow posting on OctoLab instagram</label>
                            </p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col s12 m12">
                            <div class="input-field">
                                {{!-- <textarea name="note" id="textarea1" class="materialize-textarea"></textarea>
                                <label for="textarea1">Another notes</label> --}}
                                <h6><b>Another notes:</b></h6>
                                <textarea name="note" id="textarea1"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col s12 m12">
                            <input type="submit" value="Process" class="btn btn-form yellow accent-4">
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <span class="center">
            <p>
                Before ordering, don't forget to read our <a href="/procedure">Procedure</a> and <a href="/pricelist">Price List</a>.
            </p>
        </span>
    </div>
</div>
